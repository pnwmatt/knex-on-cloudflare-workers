{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "WebWorker"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "dist",
    "rootDirs": ["lib"],
    "importHelpers": false,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "noEmitOnError": false
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
